<local:BaseWindow x:Class="Client.UI.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:local="clr-namespace:Client.UI"
                  Title="Turtle Minesweeper">
    
    <Grid>
        <!-- Title and splash -->
        <TextBlock Style="{StaticResource TitleTextStyle}" x:Name="TitleText"/>
        <TextBlock Style="{StaticResource SplashTextStyle}" x:Name="SplashText"/>

        <!-- Containers for content -->
        <Grid x:Name="MainContainer"/>
    </Grid>
</local:BaseWindow>
