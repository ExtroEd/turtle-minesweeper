<UserControl x:Class="Client.UI.SinglePlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <!-- Settings panel -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            
            <!-- Grid size -->
            <TextBlock Text="Grid Size (10–500)" Style="{StaticResource LabelTextStyle}"/>
            <TextBox x:Name="GridSizeTextBox" Text="20" Style="{StaticResource InputTextBoxStyle}"/>

            <!-- Mine % -->
            <TextBlock Text="Mine % (0–60)" Style="{StaticResource LabelTextStyle}"/>
            <TextBox x:Name="MinePercentTextBox" Text="10" Style="{StaticResource InputTextBoxStyle}"/>

            <!-- Enable enemy fox -->
            <CheckBox x:Name="EnableFoxCheckBox"
                      Content="Enable enemy fox"
                      Margin="0,10,0,5"
                      Checked="EnableFoxCheckBox_Checked"
                      Unchecked="EnableFoxCheckBox_Unchecked"/>

            <!-- Fox speed (only visible if checkbox checked) -->
            <StackPanel x:Name="FoxSpeedPanel" Visibility="Collapsed">
                <TextBlock Text="Fox Speed (1–10 squares/sec)" Style="{StaticResource LabelTextStyle}"/>
                <TextBox x:Name="FoxSpeedTextBox" Text="5" Style="{StaticResource InputTextBoxStyle}"/>
            </StackPanel>

            <!-- Start game button -->
            <Button Content="Start Game" Style="{StaticResource MainButtonStyle}" Click="StartGame_Click" Margin="0 15 0 0"/>
            <Button Content="Back"       Style="{StaticResource RedButtonStyle}"  Click="Back_Click" Margin="0 15 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>
