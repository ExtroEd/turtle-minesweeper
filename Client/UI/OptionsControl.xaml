<UserControl x:Class="Client.UI.OptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Window Mode" FontWeight="Bold" Margin="0,10,0,5"/>
            <ComboBox x:Name="WindowModeComboBox" SelectedIndex="0" Margin="0,0,0,20">
                <ComboBoxItem Content="Fullscreen" />
                <ComboBoxItem Content="Fullscreen Windowed" />
                <ComboBoxItem Content="Windowed" />
            </ComboBox>

            <Button Content="Apply Window Mode" Style="{StaticResource MainButtonStyle}" Click="ApplyWindowMode_Click" Margin="0,5,0,0"/>
            <Button Content="Back" Style="{StaticResource RedButtonStyle}" Click="Back_Click" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
