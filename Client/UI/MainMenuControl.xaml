<UserControl x:Class="Client.UI.MainMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="Auto" Height="Auto">
    
    <Grid>
        <!-- Кнопки меню по центру -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Single Player" Click="SinglePlayer_Click" Style="{StaticResource MainButtonStyle}" Margin="0 15 0 0"/>
            <Button Content="Multi Player"  Click="MultiPlayer_Click"  Style="{StaticResource MainButtonStyle}" Margin="0 15 0 0"/>
            <Button Content="Options"       Click="Options_Click"      Style="{StaticResource MainButtonStyle}" Margin="0 15 0 0"/>
            <Button Content="Exit"          Click="Exit_Click"         Style="{StaticResource RedButtonStyle}" Margin="0 15 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>