<UserControl x:Class="Client.UI.GameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             Focusable="True"
             KeyDown="OnKeyDown">

    <Grid>
        <!-- Вместо Canvas используем SkiaSharp -->
        <skia:SKElement x:Name="GameSurface" PaintSurface="OnPaintSurface"
                        MouseWheel="GameSurface_MouseWheel"
                        MouseLeftButtonDown="GameSurface_MouseLeftButtonDown"
                        MouseLeftButtonUp="GameSurface_MouseLeftButtonUp"
                        MouseMove="GameSurface_MouseMove"/>
    </Grid>
</UserControl>
